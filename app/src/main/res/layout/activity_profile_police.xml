<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Profile_police"

    >

    <ScrollView
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBack">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorLayerBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/firstlayer">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="160dp"
                                android:layout_marginTop="10dp"
                                android:layout_height="150dp"
                                android:src="@drawable/boy"
                                />

                        </RelativeLayout>




                        <TextView
                            android:id="@+id/pname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTitle"
                            android:text="Md. Safiul Alam"/>

                        <TextView
                            android:id="@+id/paddress"
                            android:layout_marginBottom="10px"
                            android:layout_marginTop="3px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:textColor="@color/colorSubTitle"
                            android:text="Basila, Dhaka"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="50px"
                    android:paddingTop="70px"
                    android:gravity="center"
                    android:paddingBottom="70px"
                    android:background="@drawable/secondlayer">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/ptk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="600 Tk"
                                android:textColor="@color/colorTitleWhite"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fined Amount"
                                android:textColor="@color/colorSubTitleWhite"
                                android:textSize="19sp"
                                android:textStyle="normal"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20px"
                            android:layout_marginRight="20px"
                            android:background="@color/colorPrimaryDark"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/pdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25-12-19"
                                android:textColor="@color/colorTitleWhite"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pay Within"
                                android:textColor="@color/colorSubTitleWhite"
                                android:textSize="19sp"
                                android:textStyle="normal"></TextView>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:padding="50px"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleWhite"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Vehicle"
                            />
                        <TextView
                            android:id="@+id/pvehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleWhite"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:text="Private Car"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="10px"
                        android:background="@color/colorHorizontalDivider"></View>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleWhite"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Reg Number"
                            />
                        <TextView
                            android:id="@+id/preg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleWhite"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:text="ঢাকা মেট্রো-গ ২১-১৫৮৯"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="10px"
                        android:background="@color/colorHorizontalDivider"></View>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleWhite"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Gender" />
                        <TextView
                            android:id="@+id/pgender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleWhite"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:text="Male"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="10px"
                        android:background="@color/colorHorizontalDivider"></View>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleWhite"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Home District" />
                        <TextView
                            android:id="@+id/pdistrict"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleWhite"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:text="Rangpur"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="10px"
                        android:background="@color/colorHorizontalDivider"></View>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleWhite"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Emergency Mobile" />
                        <TextView
                            android:id="@+id/pemr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitleWhite"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:text="01678010740"
                            />
                    </LinearLayout>








                </LinearLayout>
            </LinearLayout>



            ></RelativeLayout>
    </ScrollView>
    ></LinearLayout>