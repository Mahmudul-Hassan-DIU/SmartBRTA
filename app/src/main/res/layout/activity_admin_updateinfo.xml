<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Admin_updateinfo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="5"
        android:gravity="center_horizontal"
        android:background="#d3ffce">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.4"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:src="@drawable/reload"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Update Owner Info"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>



    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/auiivisible2"
            android:orientation="horizontal"
            android:layout_width="270dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:gravity="center">
            <EditText
                android:id="@+id/auiireg"
                android:backgroundTint="#60EFE1F0"
                android:background="@drawable/border2"
                android:padding="10dp"
                android:textSize="17sp"
                android:layout_width="130dp"
                android:layout_height="45sp"
                android:hint="Reg Num"
                android:inputType="number"
                android:textColorHint="@color/colorAccents">
            </EditText>
            <Button
                android:id="@+id/auiisearch"
                android:padding="10dp"
                android:background="@drawable/border2"
                android:layout_marginLeft="10dp"
                android:text="Search"
                android:backgroundTint="#d3ffce"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="45sp"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/auiivisible"
            android:visibility="gone"
            android:padding="5dp"
            android:backgroundTint="#d3ffce"
            android:background="@drawable/border2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Md. Mahmudul Hassan"
                android:textStyle="bold"
                android:id="@+id/auiiname"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp">
            </TextView>

            <TextView
                android:text="Dhanmondi, Dhaka"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/auiiaddress"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17sp">
            </TextView>
        </LinearLayout>

        <ScrollView
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColorHint="@color/colorAccents"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/auiinewname"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:ems="10"
                        android:textSize="22sp"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:focusable="true"
                    android:layout_marginTop="5dp"
                    android:focusableInTouchMode="true"
                    android:textColorHint="@color/colorAccents"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Address"
                        android:id="@+id/auiiemail"
                        android:ems="10"
                        android:textSize="22sp"
                        android:inputType="textEmailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:focusable="true"
                    android:layout_marginTop="5dp"
                    android:focusableInTouchMode="true"
                    android:textColorHint="@color/colorAccents"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        android:ems="10"
                        android:id="@+id/auiimobile"
                        android:textSize="22sp"
                        android:inputType="phone"/>
                </com.google.android.material.textfield.TextInputLayout>



                <Button
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="60dp"
                    android:id="@+id/auiiconfirm"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border"
                    android:backgroundTint="#3C295E"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textStyle="normal"
                    android:textColor="#F5F1F1"
                    android:textSize="20sp"
                    ></Button>


                ></LinearLayout>


        </ScrollView>
    </LinearLayout>
</LinearLayout>