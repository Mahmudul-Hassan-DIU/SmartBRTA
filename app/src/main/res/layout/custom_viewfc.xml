<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="2dp"
    android:id="@+id/custom_viewfc"
    android:layout_width="match_parent"
    android:layout_height="130dp">



        <LinearLayout
            android:gravity="center"
            android:backgroundTint="#fd9466"
            android:padding="7dp"
            android:background="@drawable/rvborder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="110dp"
                android:src="@drawable/girl"/>
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="70dp">
                <TextView
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:text="Md. Mahmudul Hassan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:text="Reg Num: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/areg"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:text="21-1589"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:text="Amonut: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/aamount"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:text="510"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:text="Status: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/astatus"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:text="Paid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/image_delete"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/checked"></ImageView>

        </LinearLayout>



</LinearLayout>